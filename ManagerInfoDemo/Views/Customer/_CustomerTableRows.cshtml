@model IEnumerable<ManagerInfoDemo.Models.Customer>

@if (!Model.Any())
{
    <tr>
        <td colspan="8" class="text-center text-muted">Không có khách hàng phù hợp.</td>
    </tr>
}
else
{
    foreach (var item in Model)
    {
        <tr data-id="@item.Id">
            <td>@item.Id</td>
            <td>@item.FullName</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.Address</td>
            <td>@item.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
            <td>
                @if (item.IsVerify == true)
                {
                    <span class="badge bg-success">Đã xác thực</span>
                }
                else
                {
                    <span class="badge bg-label-warning text-uppercase">Chưa xác thực</span>
                }
            </td>
            <td class="text-end">
                <button type="button" class="btn btn-sm btn-info btn-edit">
                    <i class="bx bx-edit"></i>
                </button>
                <button type="button" class="btn btn-sm btn-danger btn-delete">
                    <i class="bx bx-trash"></i>
                </button>
            </td>
        </tr>
    }
}
